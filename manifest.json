{
   "manifest_version": 3,
   "name": "WDW Schedule Scraper",
   "description": "This extension will scrape the WDW website for the current schedule and display it in a popup.",
   "permissions": ["activeTab", "storage", "https://scheduleview.disney.com/*"],
   "version": "1.0", 
   "icons":  { 
      "16": "/images/icon16.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
   },
   "content_scripts": [
      {
         "matches": ["https://scheduleview.disney.com/"],
         "css": ["css/WDW_Schedule_Scraper.css"],
         "js": ["/scraper-code.js"]
      }
   ]
}